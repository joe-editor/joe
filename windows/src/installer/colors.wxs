<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <?include properties.wxi ?>
  
  <Fragment>
    <!-- Default colors, always installed (keep this small) -->
    <ComponentGroup Id="StandardColorsComponentGroup">
      <Component Id="blueJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="blueJCF" Name="blue.jcf" DiskId="1" Source="$(var.ColorsRootDir)\blue.jcf" KeyPath="yes" />
      </Component>
      <Component Id="defaultJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="defaultJCF" Name="default.jcf" DiskId="1" Source="$(var.ColorsRootDir)\default.jcf" KeyPath="yes" />
      </Component>
      <Component Id="gruvboxJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="gruvboxJCF" Name="gruvbox.jcf" DiskId="1" Source="$(var.ColorsRootDir)\gruvbox.jcf" KeyPath="yes" />
      </Component>
      <Component Id="ir_blackJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="ir_blackJCF" Name="ir_black.jcf" DiskId="1" Source="$(var.ColorsRootDir)\ir_black.jcf" KeyPath="yes" />
      </Component>
      <Component Id="molokaiJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="molokaiJCF" Name="molokai.jcf" DiskId="1" Source="$(var.ColorsRootDir)\molokai.jcf" KeyPath="yes" />
      </Component>
      <Component Id="solarizedJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="solarizedJCF" Name="solarized.jcf" DiskId="1" Source="$(var.ColorsRootDir)\solarized.jcf" KeyPath="yes" />
      </Component>
      <Component Id="wombatJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="wombatJCF" Name="wombat.jcf" DiskId="1" Source="$(var.ColorsRootDir)\wombat.jcf" KeyPath="yes" />
      </Component>
      <Component Id="xoriaJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="xoriaJCF" Name="xoria.jcf" DiskId="1" Source="$(var.ColorsRootDir)\xoria.jcf" KeyPath="yes" />
      </Component>
      <Component Id="zenburnJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="zenburnJCF" Name="zenburn.jcf" DiskId="1" Source="$(var.ColorsRootDir)\zenburn.jcf" KeyPath="yes" />
      </Component>
    </ComponentGroup>
    
    <!-- Extra colors, installed only if user confirms -->
    <ComponentGroup Id="ExtendedColorsComponentGroup">
      <Component Id="zenburnHCJCFComponent" Guid="*" Directory="COLORFOLDER" Win64="$(var.Win64)">
        <File Id="zenburnHCJCF" Name="zenburn-hc.jcf" DiskId="1" Source="$(var.ColorsRootDir)\zenburn-hc.jcf" KeyPath="yes" />
      </Component>
    </ComponentGroup>
  </Fragment>
</Wix>
